<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- vertical ScrollView to make all the items or views scrollable -->

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <!-- LinearLayout Inside ScrollView -->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <ImageView
                android:id="@+id/patientimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:gravity="right|center_vertical"
                android:padding="10px"/>

            <TextView
                android:id="@+id/imageupload"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Upload image"
                android:textSize="16dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:background="@color/Orange"
                android:layout_gravity="center"
                android:letterSpacing="0.025"
                android:padding="10dp"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:id="@+id/firstLayout"
                android:layout_marginTop="2dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_design"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/name"
                    android:maxLength="50"
                    android:hint="name"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="45dip"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <LinearLayout
                android:id="@+id/secondLayout"
                android:layout_width="fill_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_design"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/address"
                    android:maxLength="50"
                    android:hint="address"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="45dip"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/Division"
                android:layout_width="fill_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <Spinner
                    android:id="@+id/division"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".5"
                    android:background="@color/editTextBack"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />

                <!-- place one TextView and one EditText inside layout using weight property -->

                <Spinner
                    android:id="@+id/district"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingRight="10dp"
                    android:background="@color/editTextBack"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:layout_weight=".5"
                    android:singleLine="true"
                    android:textColor="@color/blackColor" />
            </LinearLayout>

            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <LinearLayout
                android:id="@+id/thirdLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_design"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/age"
                    android:maxLength="50"
                    android:hint="age"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="45dip"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <LinearLayout
                android:id="@+id/fourthLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <!-- place one TextView and one EditText inside layout using weight property -->
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_design"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/gender"
                    android:maxLength="50"
                    android:hint="gender"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="45dip"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <LinearLayout
                android:id="@+id/fifthLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_design"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/mobileno"
                    android:maxLength="50"
                    android:hint="mobile no"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="45dip"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <LinearLayout
                android:id="@+id/sixthLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_design"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/disease"
                    android:maxLength="50"
                    android:hint="disease"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="45dip"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <LinearLayout
                android:id="@+id/lastLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_design"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:id="@+id/bloodgroup"
                    android:maxLength="50"
                    android:hint="blood group"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="45dip"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seventhLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_text_design"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:id="@+id/password"
                    android:maxLength="50"
                    android:hint="password"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="45dip"
                    android:paddingTop="15dp"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="16dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:background="@color/Orange"
                android:layout_gravity="center"
                android:letterSpacing="0.025"
                android:padding="10dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/login"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Return to patient"
                android:textColor="@color/blackColor" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>